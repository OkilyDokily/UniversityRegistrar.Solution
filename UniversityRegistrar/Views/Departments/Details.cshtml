@{
  Layout = "_Layout";
}


@using UniversityRegistrar.Models;
<p>Department GPA: @ViewBag.GPA</p>
<h3>Courses</h3>
@if(@Model.Courses.Count > 0)
{
@foreach (Course course in @Model.Courses)
{
  <p>@Html.ActionLink(course.CourseName,"Details","Courses", new {id = course.CourseId})</p>
}
}
else
{
<p>There are no courses yet for this Department</p>
}

<h3>Students</h3>
@if(@Model.Students.Count > 0)
{
@foreach (Student student in @Model.Students)
{
  <p>@Html.ActionLink(student.Name,"Details","Students", new {id = student.StudentId})</p>
}
}
else
{
<p>There are no students yet enrolled in this Department</p>
}