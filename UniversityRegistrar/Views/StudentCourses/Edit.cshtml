@{
  Layout = "_Layout";
}


@using UniversityRegistrar.Models
@model UniversityRegistrar.Models.StudentCourse

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.StudentCourseId);
  @Html.HiddenFor(m => m.CourseId);
  @Html.HiddenFor(m => m.StudentId);

  @Html.LabelFor(m => m.Grade)
  @Html.DropDownList("Grade");
  @Html.LabelFor(m => m.Finished)
  @Html.EditorFor(m => m.Finished)

  <input value="Change status" type="submit">
}