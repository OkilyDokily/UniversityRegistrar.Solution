@{
  Layout = "_Layout";
}
@model List<UniversityRegistrar.Models.StudentWithGPAAndSC>;

@using UniversityRegistrar.Models;

<p>Average course grade: @ViewBag.GPA</p>

<p>See student details:</p>

@if(@Model.Count > 0){
  @foreach (StudentWithGPAAndSC swg in @Model)
  {
    <p>@Html.ActionLink(swg.StudentWithGPA.Student.Name,"Details","Students", new {id = swg.StudentWithGPA.Student.StudentId}) : Grade in course: @Html.ActionLink(swg.StudentWithGPA.GPA.ToString(), "Edit","StudentCourses", new {id = swg.StudentCourse.StudentCourseId})  
    </p>
  }
}
else
{
  <>There are no students yet enrolled in this course</>
}

<p>Department for this course: @Html.ActionLink((string) @ViewBag.Department.Name, "Details","Departments",new {id =
                          @ViewBag.Department.DepartmentId})</p>
